{
  "name": "life-quest-server",
  "version": "1.0.0",
  "description": "Backend express RESTful API server for LifeQuest gamified habit reinforcement app",
  "license": "MIT",
  "author": "ByteQuest dev team",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "setup-db": "node ./database/setup.js",
    "live": "live-server",
    "test": "jest --runInBand",
    "test:unit": "jest --selectProjects unit --runInBand --watchAll",
    "test:integration": "jest --selectProjects integration --runInBand",
    "watch": "jest --watchAll --verbose --detectOpenHandles --runInBand",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.3",
    "testcontainers": "^8.16.0"
  }
}
